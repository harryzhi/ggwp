extends layout

append CSS
	link(rel='stylesheet', href='/stylesheets/project_new.css')
	link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css')

block content
	.container-fluid
		h1#title Start your comic here!
		br
		.container-fluid#project_form
				form(action='/create_project', method='post', enctype='multipart/form-data')
					.col-md-4#text_input
						fieldset.form-group
							label Comic Title
							br
							input.form-control(type='text', name='title', placeholder='Enter your title', required)
						fieldset.form-group
							label Description
							textarea#bio.form-control(rows='12', name='description', placeholder='Tell us a bit of the story!', required)
						label#genre Genre
						.radio
							label
								input(type='radio', name='category', value='Alternative', required)
								| Alternative
						.radio
							label
								input(type='radio', name='category', value='Crime', required)
								| Crime
						.radio
							label
								input(type='radio', name='category', value='Fantasy', required)
								| Fantasy
						.radio
							label
								input(type='radio', name='category', value='Macabre', required)
								| Macabre
						.radio
							label
								input(type='radio', name='category', value='Romance', required)
								| Romance
						.radio
							label
								input(type='radio', name='category', value='Sci-Fi', required)
								| Sci-Fi
						.radio
							label
								input(type='radio', name='category', value='Superhero', required)
								| Superhero
						.radio
							label
								input(type='radio', name='category', value='Western', required)
								| Western					
						.radio
							label
								input(type='radio', name='category', value='Funny', required)
								| Funny	
						input#create_btn(type='submit', name='submit', value='Create!')
					.col-md-6#image_input
						label Cover Page
						br
						.fileinput.fileinput-new(data-provides='fileinput')
							.fileinput-preview.thumbnail(data-trigger='fileinput', style='max-width: 612px; max-height: auto;')
							div
								span.btn.btn-default.btn-file
									span.fileinput-new Select image
									span.fileinput-exists Change
									input(type='file', name='file', required)
								a.btn.btn-default.fileinput-exists(href='#', data-dismiss='fileinput') Remove
				

