doctype html
html

  head
    title= title

    // Mobile support
    meta(name='viewort', content='width=device=width, initial-scale=1.0')

    // Bootstrap 
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js')
    link(rel='stylesheet', type='text/css', href='//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')

    // CSS
    block CSS
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/header_style.css')
    link(rel='stylesheet', href='/stylesheets/navbar_style.css')

  body
    block pageHeader
      .container-fluid
        .jumbotron
          h1 GGWP 
            small The social side of nerdy creativity.
    block pageNav
      .container-fluid()
        nav.navbar.navbar-default.navbar-static-top( role="navigation" )
          .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar 
          #navbar-inverse.collapse.navbar-collapse
            ul.nav.navbar-nav
              li: a(href='/main') Home
              - if (user.userType == "Contributor") {
                li: a(href='/projects/create') Create
                li: a(href='#') Edit
                li: a(href='/user/#{user.username}/collabs') Collaborations
                li#vert: divider-vertical
                -}
              li: a(href="/user/#{user.username}/favourites") Favourites
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | Categories
                  span.caret
                ul.dropdown-menu
                  li: a(href='/categories/Alternative') Alternative
                  li: a(href='/categories/Crime') Crime
                  li: a(href='/categories/Fantasy') Fantasy
                  li: a(href='/categories/Macabre') Macabre
                  li: a(href='/categories/Romance') Romance
                  li: a(href='/categories/Sci-Fi') Sci-Fi
                  li: a(href='/categories/Superhero') Superhero
                  li: a(href='/categories/Western') Western
                  li: a(href='/categories/Funny') Funny
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | Browse
                  span.caret
                ul.dropdown-menu
                  li: a(href='/browse/comics') Comics
                  li: a(href='/browse/contributors') Contributors
                  li: a(href='/random') Random
            ul.nav.navbar-nav.navbar-right
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                    | #{user.username} 
                    span.caret
                  ul.dropdown-menu
                    li
                      a(href='/user/#{user.username}') Profile
                    li
                      a(href='/profile_settings') Edit Profile
                    li
                      a(href='/settings') Account Settings
                    li.divider(role='separator')
                    li
                      a(href='/logout') Logout
            form.navbar-form.navbar-left(role='search')
              .form-group
                input.form-control(type='text', placeholder='Search', id='query', required)
              button.btn.btn-default(type='button', id='searchbtn') Submit
    block errorMessage
    block pageCarousel
    block pageAbout
    block content           
    script(src='/javascripts/searchBar.js')
    
