extends layout

append CSS
	link(rel='stylesheet', href='/stylesheets/project_new.css')
	link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css')
	link(rel='stylesheet', href='/stylesheets/settings_profile.css')

block content
	.container-fluid
		h1#title Manage your Profile Settings Here
		br
		form(name="settings", method="post", action="/profile_settings", enctype='multipart/form-data')
			.row
				h1#pp Choose a new profile photo
				div
				fieldset.form-group
				.fileinput.fileinput-new(data-provides='fileinput')#profile_pic
					.fileinput-preview.thumbnail(data-trigger='fileinput', style='width: 400px; height: 450px;')
					div
						span.btn.btn-default.btn-file
							span.fileinput-new Select image
							span.fileinput-exists Change
							input(type='file', name='pic')
						a.btn.btn-default.fileinput-exists(href='#', data-dismiss='fileinput') Remove
					div
				fieldset.form-group#bio_form-group
				h1#pp(for='bio') Change Bio
				textarea#bio.form-control(rows='4', name='bio', required)
				div
				button.btn.btn-primary(type='submit')#btn_submit Submit
				a.button.btn.btn-default(href='/main')#btn_cancel Cancel
